{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    // 用于进行单元测试的构建
    "build:test": {
      "dependsOn": ["^build"],
      "outputs": ["internal-dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build:test"]
    },
    "lint": {}
  }
}
